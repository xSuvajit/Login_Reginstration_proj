@{
    ViewBag.Title = "Topics";
}

<h2>@Session["name"]'s Topics</h2>

<div>
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    @Html.ActionLink("Add Topics", "addTopics")
</p>

<table class="table">
    <tr>
        <td><b>Topic Name</b></td>
        <td><b>Status</b></td>
    </tr>
    @foreach (var item in ViewBag.UserTopics)
    {
        using (Html.BeginForm("EditStatusTopic", "Topics", new {topic=@item.MyTopics }))
        {
            <tr>
                <td>
                    @item.MyTopics
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <input type="submit" name="name" value="Edit Status" />
                </td>
            </tr>

        }
    }
</table>
<td>@Session["info"]</td>
